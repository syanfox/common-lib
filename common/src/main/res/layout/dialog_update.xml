<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/roctet_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/updataversion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="升级到最新的版本"
        android:textColor="#295775"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/updataversion_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0.0"
        android:textColor="#295775"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/updataversion_msg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="升级描述"
        android:textColor="@color/color_585858"
        android:textSize="15sp" />

    <!--<View-->
